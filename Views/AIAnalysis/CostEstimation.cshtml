@{
    ViewData["Title"] = "AI Cost Estimation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="min-h-screen bg-gray-50 py-6">
    <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Header -->
        <div class="mb-8">
            <div class="flex justify-between items-center">
                <div>
                    <h1 class="text-3xl font-bold text-gray-900">
                        <i class="fas fa-calculator text-blue-600 mr-3"></i>
                        AI Cost Estimation
                    </h1>
                    <p class="mt-2 text-gray-600">Generate detailed cost breakdowns using AI analysis</p>
                </div>
                <a href="/AIAnalysis" class="inline-flex items-center px-4 py-2 bg-gray-600 text-white rounded-lg hover:bg-gray-700 transition-colors">
                    <i class="fas fa-arrow-left mr-2"></i>
                    Back to AI Dashboard
                </a>
            </div>
        </div>

        <!-- Success/Error Messages -->
        @if (TempData["Success"] != null)
        {
            <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-6">
                <i class="fas fa-check-circle mr-2"></i>@TempData["Success"]
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-6">
                <i class="fas fa-exclamation-triangle mr-2"></i>@TempData["Error"]
            </div>
        }

        <!-- Form -->
        <div class="bg-white shadow-lg rounded-lg overflow-hidden">
            <div class="bg-gradient-to-r from-blue-500 to-blue-600 px-6 py-4">
                <h3 class="text-lg font-semibold text-white">
                    <i class="fas fa-brain mr-2"></i>
                    AI-Powered Analysis
                </h3>
            </div>

            <form asp-action="GenerateCostEstimation" method="post" class="p-6" id="costEstimationForm">
                <div class="space-y-6">
                    <!-- Project Selection -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">
                            <i class="fas fa-project-diagram mr-2"></i>
                            Select Project (Optional)
                        </label>
                        <select name="projectId" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                            <option value="">-- New Project / General Estimation --</option>
                            @if (ViewBag.Projects != null)
                            {
                                @foreach (var project in ViewBag.Projects)
                                {
                                    <option value="@project.Id">@project.Name - @project.Location</option>
                                }
                            }
                        </select>
                        <p class="text-xs text-gray-500 mt-1">Select an existing project or leave blank for general estimation</p>
                    </div>

                    <!-- Blueprint/Document Selection -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">
                            <i class="fas fa-file-alt mr-2"></i>
                            Blueprint/Document (Optional)
                        </label>
                        <select name="documentId" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                            <option value="">-- No document selected --</option>
                            @if (ViewBag.Documents != null)
                            {
                                @foreach (var doc in ViewBag.Documents)
                                {
                                    <option value="@doc.Id">@doc.Name (@doc.DocumentType)</option>
                                }
                            }
                        </select>
                        <p class="text-xs text-gray-500 mt-1">Upload blueprints via Documents section first</p>
                    </div>

                    <!-- Project Description -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">
                            <i class="fas fa-align-left mr-2"></i>
                            Project Description *
                        </label>
                        <textarea name="description" rows="8" required
                                  class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                                  placeholder="Describe your construction project in detail...&#10;&#10;Example:&#10;- Building type: 2-story residential house&#10;- Size: 250 sqm&#10;- Location: Johannesburg, Gauteng&#10;- Materials: Brick and mortar&#10;- Special features: Solar panels, swimming pool&#10;- Timeline: 6 months&#10;&#10;Include any specific requirements, constraints, or preferences."></textarea>
                        <p class="text-xs text-gray-500 mt-1">
                            <i class="fas fa-info-circle mr-1"></i>
                            Be as detailed as possible for accurate AI estimation
                        </p>
                    </div>

                    <!-- AI Features Info -->
                    <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
                        <h4 class="text-sm font-semibold text-blue-900 mb-2">
                            <i class="fas fa-sparkles mr-2"></i>
                            AI will analyze and provide:
                        </h4>
                        <ul class="text-sm text-blue-800 space-y-1">
                            <li><i class="fas fa-check text-blue-600 mr-2"></i>Detailed material quantities and costs</li>
                            <li><i class="fas fa-check text-blue-600 mr-2"></i>Labor requirements by skill level</li>
                            <li><i class="fas fa-check text-blue-600 mr-2"></i>Equipment and machinery rental estimates</li>
                            <li><i class="fas fa-check text-blue-600 mr-2"></i>Permits and regulatory fees</li>
                            <li><i class="fas fa-check text-blue-600 mr-2"></i>Contingency planning (10-15%)</li>
                            <li><i class="fas fa-check text-blue-600 mr-2"></i>Timeline estimation</li>
                            <li><i class="fas fa-check text-blue-600 mr-2"></i>Risk factors and recommendations</li>
                        </ul>
                    </div>

                    <!-- Submit Button -->
                    <div class="flex justify-end space-x-4">
                        <a href="/AIAnalysis" class="px-6 py-3 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition-colors">
                            Cancel
                        </a>
                        <button type="submit" id="generateBtn"
                                class="px-6 py-3 bg-gradient-to-r from-blue-500 to-blue-600 text-white rounded-lg hover:from-blue-600 hover:to-blue-700 transition-all duration-200 shadow-md hover:shadow-lg">
                            <i class="fas fa-brain mr-2"></i>
                            <span id="btnText">Generate AI Estimation</span>
                            <i class="fas fa-spinner fa-spin ml-2 hidden" id="loadingIcon"></i>
                        </button>
                    </div>
                </div>
            </form>
        </div>

        <!-- How It Works -->
        <div class="mt-8 bg-white rounded-lg shadow-md p-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">
                <i class="fas fa-question-circle text-blue-600 mr-2"></i>
                How AI Cost Estimation Works
            </h3>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                <div class="text-center">
                    <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-3">
                        <i class="fas fa-upload text-blue-600 text-2xl"></i>
                    </div>
                    <h4 class="font-medium text-gray-900 mb-2">1. Input Data</h4>
                    <p class="text-sm text-gray-600">Provide project details, blueprints, and requirements</p>
                </div>
                <div class="text-center">
                    <div class="w-16 h-16 bg-purple-100 rounded-full flex items-center justify-center mx-auto mb-3">
                        <i class="fas fa-brain text-purple-600 text-2xl"></i>
                    </div>
                    <h4 class="font-medium text-gray-900 mb-2">2. AI Analysis</h4>
                    <p class="text-sm text-gray-600">DeepSeek AI analyzes using construction expertise and South African market data</p>
                </div>
                <div class="text-center">
                    <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-3">
                        <i class="fas fa-file-invoice-dollar text-green-600 text-2xl"></i>
                    </div>
                    <h4 class="font-medium text-gray-900 mb-2">3. Get Results</h4>
                    <p class="text-sm text-gray-600">Receive detailed breakdown with recommendations</p>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    document.getElementById('costEstimationForm').addEventListener('submit', function(e) {
        const btn = document.getElementById('generateBtn');
        const btnText = document.getElementById('btnText');
        const loadingIcon = document.getElementById('loadingIcon');

        btn.disabled = true;
        btnText.textContent = 'Analyzing with AI...';
        loadingIcon.classList.remove('hidden');
    });
</script>