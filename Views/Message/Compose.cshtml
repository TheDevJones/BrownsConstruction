@model BCSApp.Models.Message
@{
    ViewData["Title"] = "Compose Message";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="min-h-screen bg-gray-50 py-6">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Header -->
        <div class="mb-8">
            <div class="flex justify-between items-center">
                <div>
                    <h1 class="text-3xl font-bold text-gray-900">Compose Message</h1>
                    <p class="mt-2 text-gray-600">Send a message to team members</p>
                </div>
                <a href="/Message/Inbox" class="inline-flex items-center px-4 py-2 bg-gray-600 text-white rounded-lg hover:bg-gray-700 transition-colors">
                    <i class="fas fa-arrow-left mr-2"></i>
                    Back to Inbox
                </a>
            </div>
        </div>

        <!-- Success/Error Messages -->
        @if (TempData["Success"] != null)
        {
            <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-6">
                <i class="fas fa-check-circle mr-2"></i>@TempData["Success"]
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-6">
                <i class="fas fa-exclamation-triangle mr-2"></i>@TempData["Error"]
            </div>
        }

        <!-- Compose Form -->
        <div class="bg-white shadow rounded-lg">
            <form asp-action="Compose" method="post" enctype="multipart/form-data" class="p-6">
                <div asp-validation-summary="ModelOnly" class="text-red-600 mb-6"></div>

                <!-- Recipient -->
                <div class="mb-6">
                    <label asp-for="RecipientId" class="block text-sm font-medium text-gray-700 mb-2">
                        To: *
                    </label>
                    <select asp-for="RecipientId" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-brand-blue focus:border-transparent" required>
                        <option value="">Select Recipient</option>
                        @if (ViewBag.Users != null)
                        {
                            @foreach (var user in ViewBag.Users)
                            {
                                <option value="@user.Id" selected="@(ViewBag.PreSelectedRecipientId == user.Id)">
                                    @user.FirstName @user.LastName - @user.Role (@user.Email)
                                </option>
                            }
                        }
                    </select>
                    <span asp-validation-for="RecipientId" class="text-red-600 text-sm"></span>
                </div>

                <!-- Subject -->
                <div class="mb-6">
                    <label asp-for="Subject" class="block text-sm font-medium text-gray-700 mb-2">
                        Subject: *
                    </label>
                    <input asp-for="Subject" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-brand-blue focus:border-transparent" placeholder="Enter message subject" required />
                    <span asp-validation-for="Subject" class="text-red-600 text-sm"></span>
                </div>

                <!-- Message Type -->
                <div class="mb-6">
                    <label asp-for="MessageType" class="block text-sm font-medium text-gray-700 mb-2">
                        Message Type:
                    </label>
                    <select asp-for="MessageType" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-brand-blue focus:border-transparent">
                        <option value="General">General</option>
                        <option value="Notification">Notification</option>
                        <option value="Alert">Alert</option>
                        <option value="Update">Update</option>
                    </select>
                </div>

                <!-- Content -->
                <div class="mb-6">
                    <label asp-for="Content" class="block text-sm font-medium text-gray-700 mb-2">
                        Message: *
                    </label>
                    <textarea asp-for="Content" rows="8" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-brand-blue focus:border-transparent" placeholder="Type your message here..." required></textarea>
                    <span asp-validation-for="Content" class="text-red-600 text-sm"></span>
                </div>

                <!-- Related Items (Optional) -->
                <div class="border-t border-gray-200 pt-6 mb-6">
                    <h3 class="text-sm font-medium text-gray-700 mb-4">Link to Related Items (Optional)</h3>

                    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                        <!-- Project -->
                        <div>
                            <label asp-for="ProjectId" class="block text-sm font-medium text-gray-700 mb-2">
                                Project:
                            </label>
                            <select asp-for="ProjectId" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-brand-blue focus:border-transparent">
                                <option value="">No Project</option>
                                @if (ViewBag.Projects != null)
                                {
                                    @foreach (var project in ViewBag.Projects)
                                    {
                                        <option value="@project.Id" selected="@(ViewBag.PreSelectedProjectId == project.Id)">
                                            @project.Name
                                        </option>
                                    }
                                }
                            </select>
                        </div>

                        <!-- Maintenance Request -->
                        <div>
                            <label asp-for="MaintenanceRequestId" class="block text-sm font-medium text-gray-700 mb-2">
                                Maintenance:
                            </label>
                            <select asp-for="MaintenanceRequestId" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-brand-blue focus:border-transparent">
                                <option value="">No Maintenance</option>
                                @if (ViewBag.MaintenanceRequests != null)
                                {
                                    @foreach (var request in ViewBag.MaintenanceRequests)
                                    {
                                        <option value="@request.Id" selected="@(ViewBag.PreSelectedMaintenanceRequestId == request.Id)">
                                            @request.Title
                                        </option>
                                    }
                                }
                            </select>
                        </div>

                        <!-- Task -->
                        <div>
                            <label asp-for="TaskId" class="block text-sm font-medium text-gray-700 mb-2">
                                Task:
                            </label>
                            <select asp-for="TaskId" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-brand-blue focus:border-transparent">
                                <option value="">No Task</option>
                                @if (ViewBag.Tasks != null)
                                {
                                    @foreach (var task in ViewBag.Tasks)
                                    {
                                        <option value="@task.Id" selected="@(ViewBag.PreSelectedTaskId == task.Id)">
                                            @task.Title
                                        </option>
                                    }
                                }
                            </select>
                        </div>
                    </div>
                </div>

                <!-- Attachments -->
                <div class="mb-6">
                    <label class="block text-sm font-medium text-gray-700 mb-2">
                        Attachments:
                    </label>
                    <div class="mt-1 flex justify-center px-6 pt-5 pb-6 border-2 border-gray-300 border-dashed rounded-md hover:border-brand-blue transition-colors">
                        <div class="space-y-1 text-center">
                            <i class="fas fa-paperclip text-gray-400 text-3xl mb-3"></i>
                            <div class="flex text-sm text-gray-600">
                                <label for="attachments" class="relative cursor-pointer bg-white rounded-md font-medium text-brand-blue hover:text-blue-500 focus-within:outline-none">
                                    <span>Upload files</span>
                                    <input id="attachments" name="attachments" type="file" class="sr-only" multiple accept=".pdf,.docx,.png,.jpg,.jpeg,.txt">
                                </label>
                                <p class="pl-1">or drag and drop</p>
                            </div>
                            <p class="text-xs text-gray-500">PDF, DOCX, PNG, JPG, JPEG, TXT up to 10MB each</p>
                        </div>
                    </div>
                </div>

                <!-- Submit Buttons -->
                <div class="flex justify-end space-x-4">
                    <a href="/Message/Inbox" class="px-6 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition-colors">
                        Cancel
                    </a>
                    <button type="submit" class="px-6 py-2 bg-brand-blue text-white rounded-lg hover:bg-blue-600 transition-colors">
                        <i class="fas fa-paper-plane mr-2"></i>
                        Send Message
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        // File input change handler
        document.getElementById('attachments').addEventListener('change', function(e) {
            const files = e.target.files;
            if (files.length > 0) {
                const uploadArea = document.querySelector('.border-dashed');
                let fileList = '<div class="text-center"><i class="fas fa-file text-green-500 text-3xl mb-2"></i><p class="text-sm font-medium text-gray-900">Selected Files:</p><ul class="text-xs text-gray-600 mt-2">';

                for (let i = 0; i < files.length; i++) {
                    const size = (files[i].size / 1024 / 1024).toFixed(2);
                    fileList += `<li>${files[i].name} (${size} MB)</li>`;
                }

                fileList += '</ul><button type="button" onclick="document.getElementById(\'attachments\').click()" class="mt-2 text-sm text-brand-blue hover:text-blue-500">Change Files</button></div>';
                uploadArea.innerHTML = fileList;
            }
        });
    </script>
}