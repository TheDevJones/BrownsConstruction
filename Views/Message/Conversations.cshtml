@model List<BCSApp.Models.ConversationViewModel>
@{
    ViewData["Title"] = "Conversations";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="min-h-screen bg-gray-50 py-6">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Header -->
        <div class="mb-8">
            <div class="flex justify-between items-center">
                <div>
                    <h1 class="text-3xl font-bold text-gray-900">Conversations</h1>
                    <p class="mt-2 text-gray-600">Your message threads with team members</p>
                </div>
                <div class="flex space-x-3">
                    <a href="/Message/Compose" class="inline-flex items-center px-4 py-2 bg-brand-blue text-white rounded-lg hover:bg-blue-600 transition-colors">
                        <i class="fas fa-pen mr-2"></i>
                        New Message
                    </a>
                </div>
            </div>
        </div>

        <!-- Message Navigation -->
        <div class="bg-white shadow rounded-lg mb-6">
            <div class="flex border-b">
                <a href="/Message/Inbox" class="px-6 py-3 text-sm font-medium text-gray-600 hover:text-gray-900">
                    <i class="fas fa-inbox mr-2"></i>Inbox
                </a>
                <a href="/Message/Sent" class="px-6 py-3 text-sm font-medium text-gray-600 hover:text-gray-900">
                    <i class="fas fa-paper-plane mr-2"></i>Sent
                </a>
                <a href="/Message/Conversations" class="px-6 py-3 text-sm font-medium text-brand-blue border-b-2 border-brand-blue">
                    <i class="fas fa-comments mr-2"></i>Conversations
                </a>
            </div>
        </div>

        <!-- Conversations List -->
        <div class="bg-white shadow rounded-lg">
            @if (Model.Any())
            {
                <div class="divide-y divide-gray-200">
                    @foreach (var conversation in Model)
                    {
                        <a href="/Message/Conversation/@conversation.Partner.Id" class="block hover:bg-gray-50 transition-colors">
                            <div class="px-6 py-4">
                                <div class="flex items-center">
                                    <!-- Avatar -->
                                    <div class="flex-shrink-0">
                                        <div class="w-14 h-14 bg-gradient-to-r from-brand-navy to-brand-blue rounded-full flex items-center justify-center relative">
                                            <span class="text-white font-medium text-lg">
                                                @conversation.Partner.FirstName.Substring(0, 1)@conversation.Partner.LastName.Substring(0, 1)
                                            </span>
                                            @if (conversation.UnreadCount > 0)
                                            {
                                                <span class="absolute -top-1 -right-1 inline-flex items-center justify-center px-2 py-1 text-xs font-bold leading-none text-white bg-red-500 rounded-full">
                                                    @conversation.UnreadCount
                                                </span>
                                            }
                                        </div>
                                    </div>

                                    <!-- Conversation Info -->
                                    <div class="ml-4 flex-1 min-w-0">
                                        <div class="flex items-center justify-between">
                                            <div class="flex-1 min-w-0">
                                                <p class="text-base font-semibold text-gray-900 truncate">
                                                    @conversation.Partner.FirstName @conversation.Partner.LastName
                                                    <span class="ml-2 inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-blue-100 text-blue-800">
                                                        @conversation.Partner.Role
                                                    </span>
                                                </p>
                                                <p class="text-sm text-gray-500 truncate">@conversation.Partner.Email</p>
                                                @if (conversation.Partner.Company != null)
                                                {
                                                    <p class="text-xs text-gray-400 truncate mt-1">
                                                        <i class="fas fa-building mr-1"></i>@conversation.Partner.Company
                                                    </p>
                                                }
                                            </div>
                                            <div class="ml-4 text-right">
                                                @if (conversation.LastMessage != null)
                                                {
                                                    <p class="text-sm text-gray-500">
                                                        @if (conversation.LastMessage.CreatedAt.Date == DateTime.Now.Date)
                                                        {
                                                            @conversation.LastMessage.CreatedAt.ToString("HH:mm")
                                                        }
                                                        else if (conversation.LastMessage.CreatedAt.Date == DateTime.Now.AddDays(-1).Date)
                                                        {
                                                            <text>Yesterday</text>
                                                        }
                                                        else
                                                        {
                                                            @conversation.LastMessage.CreatedAt.ToString("MMM dd")
                                                        }
                                                    </p>
                                                }
                                            </div>
                                        </div>
                                        @if (conversation.LastMessage != null)
                                        {
                                            <div class="mt-2">
                                                <p class="text-sm text-gray-600 truncate @(conversation.UnreadCount > 0 ? "font-semibold" : "")">
                                                    <span class="text-gray-500">@conversation.LastMessage.Subject</span> - @conversation.LastMessage.Content
                                                </p>
                                            </div>
                                        }
                                    </div>

                                    <!-- Arrow Icon -->
                                    <div class="ml-4">
                                        <i class="fas fa-chevron-right text-gray-400"></i>
                                    </div>
                                </div>
                            </div>
                        </a>
                    }
                </div>
            }
            else
            {
                <div class="px-6 py-12 text-center">
                    <div class="mx-auto w-24 h-24 bg-gray-100 rounded-full flex items-center justify-center mb-4">
                        <i class="fas fa-comments text-gray-400 text-2xl"></i>
                    </div>
                    <h3 class="text-lg font-medium text-gray-900 mb-2">No conversations</h3>
                    <p class="text-gray-500 mb-6">Start a conversation by sending a message.</p>
                    <a href="/Message/Compose" class="inline-flex items-center px-4 py-2 bg-brand-blue text-white rounded-lg hover:bg-blue-600 transition-colors">
                        <i class="fas fa-pen mr-2"></i>
                        Compose Message
                    </a>
                </div>
            }
        </div>
    </div>
</div>