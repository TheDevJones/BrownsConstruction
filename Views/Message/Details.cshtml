@model BCSApp.Models.Message
@{
    ViewData["Title"] = "Message Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="min-h-screen bg-gray-50 py-6">
    <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Header -->
        <div class="mb-8">
            <div class="flex justify-between items-center">
                <div>
                    <h1 class="text-3xl font-bold text-gray-900">@Model.Subject</h1>
                </div>
                <div class="flex space-x-3">
                    <a href="/Message/Inbox" class="inline-flex items-center px-4 py-2 bg-gray-600 text-white rounded-lg hover:bg-gray-700 transition-colors">
                        <i class="fas fa-arrow-left mr-2"></i>
                        Back to Inbox
                    </a>
                    <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="inline" onsubmit="return confirm('Are you sure you want to delete this message?');">
                        <button type="submit" class="inline-flex items-center px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 transition-colors">
                            <i class="fas fa-trash mr-2"></i>
                            Delete
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <!-- Message Content -->
        <div class="bg-white shadow rounded-lg mb-6">
            <!-- Message Header -->
            <div class="px-6 py-4 border-b border-gray-200">
                <div class="flex items-center justify-between">
                    <div class="flex items-center space-x-4">
                        <!-- Sender Avatar -->
                        <div class="flex-shrink-0">
                            <div class="w-12 h-12 bg-gradient-to-r from-brand-navy to-brand-blue rounded-full flex items-center justify-center">
                                <span class="text-white font-medium">
                                    @Model.Sender.FirstName.Substring(0, 1)@Model.Sender.LastName.Substring(0, 1)
                                </span>
                            </div>
                        </div>

                        <!-- Sender Info -->
                        <div>
                            <p class="text-sm font-medium text-gray-900">
                                @Model.Sender.FirstName @Model.Sender.LastName
                            </p>
                            <p class="text-sm text-gray-500">@Model.Sender.Email</p>
                            <p class="text-xs text-gray-500 mt-1">
                                <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-blue-100 text-blue-800">
                                    @Model.Sender.Role
                                </span>
                            </p>
                        </div>
                    </div>

                    <!-- Date -->
                    <div class="text-right">
                        <p class="text-sm text-gray-900">@Model.CreatedAt.ToString("MMM dd, yyyy")</p>
                        <p class="text-sm text-gray-500">@Model.CreatedAt.ToString("HH:mm")</p>
                    </div>
                </div>

                <!-- Recipient Info -->
                <div class="mt-3 flex items-center text-sm text-gray-600">
                    <span class="font-medium">To:</span>
                    <span class="ml-2">@Model.Recipient.FirstName @Model.Recipient.LastName</span>
                    <span class="ml-1 text-gray-400">(@Model.Recipient.Email)</span>
                </div>

                <!-- Tags -->
                <div class="flex items-center space-x-2 mt-3">
                    <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-gray-100 text-gray-800">
                        <i class="fas fa-tag mr-1"></i>@Model.MessageType
                    </span>
                    @if (Model.ProjectId != null)
                    {
                        <a href="/Project/Details/@Model.ProjectId" class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-purple-100 text-purple-800 hover:bg-purple-200">
                            <i class="fas fa-project-diagram mr-1"></i>@Model.Project?.Name
                        </a>
                    }
                    @if (Model.MaintenanceRequestId != null)
                    {
                        <a href="/Maintenance/Details/@Model.MaintenanceRequestId" class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-yellow-100 text-yellow-800 hover:bg-yellow-200">
                            <i class="fas fa-tools mr-1"></i>@Model.MaintenanceRequest?.Title
                        </a>
                    }
                    @if (Model.TaskId != null)
                    {
                        <a href="/Task/Details/@Model.TaskId" class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-green-100 text-green-800 hover:bg-green-200">
                            <i class="fas fa-tasks mr-1"></i>@Model.Task?.Title
                        </a>
                    }
                </div>
            </div>

            <!-- Message Body -->
            <div class="px-6 py-6">
                <div class="prose max-w-none">
                    <p class="text-gray-900 whitespace-pre-wrap">@Model.Content</p>
                </div>
            </div>

            <!-- Attachments -->
            @if (Model.Attachments != null && Model.Attachments.Any())
            {
                <div class="px-6 py-4 border-t border-gray-200 bg-gray-50">
                    <h4 class="text-sm font-medium text-gray-900 mb-3">
                        <i class="fas fa-paperclip mr-2"></i>Attachments (@Model.Attachments.Count)
                    </h4>
                    <div class="space-y-2">
                        @foreach (var attachment in Model.Attachments)
                        {
                            <div class="flex items-center justify-between p-3 bg-white rounded-lg border border-gray-200">
                                <div class="flex items-center">
                                    <i class="fas fa-file text-gray-400 mr-3"></i>
                                    <div>
                                        <p class="text-sm font-medium text-gray-900">@attachment.FileName</p>
                                        <p class="text-xs text-gray-500">@((attachment.FileSize / 1024.0 / 1024.0).ToString("F2")) MB</p>
                                    </div>
                                </div>
                                <a href="@attachment.FilePath" download class="text-brand-blue hover:text-blue-600">
                                    <i class="fas fa-download"></i>
                                </a>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>

        <!-- Reply Section -->
        <div class="bg-white shadow rounded-lg">
            <div class="px-6 py-4 border-b border-gray-200">
                <h3 class="text-lg font-medium text-gray-900">Reply</h3>
            </div>
            <form asp-action="Reply" asp-route-id="@Model.Id" method="post" class="p-6">
                <div class="mb-4">
                    <label for="content" class="block text-sm font-medium text-gray-700 mb-2">
                        Your Reply:
                    </label>
                    <textarea name="content" id="content" rows="6" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-brand-blue focus:border-transparent" placeholder="Type your reply here..." required></textarea>
                </div>
                <div class="flex justify-end space-x-4">
                    <button type="submit" class="px-6 py-2 bg-brand-blue text-white rounded-lg hover:bg-blue-600 transition-colors">
                        <i class="fas fa-reply mr-2"></i>
                        Send Reply
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>