@model List<BCSApp.Models.AIAnalysis>
@{
    ViewData["Title"] = "AI Analysis Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="min-h-screen bg-gray-50 py-6">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Header -->
        <div class="mb-8">
            <div class="flex justify-between items-center">
                <div>
                    <h1 class="text-3xl font-bold text-gray-900">
                        <i class="fas fa-brain text-brand-purple mr-3"></i>
                        AI Analysis Dashboard
                    </h1>
                    <p class="mt-2 text-gray-600">Powered by DeepSeek AI - Advanced construction intelligence</p>
                </div>
            </div>
        </div>

        <!-- AI Tools Grid -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
            <!-- Cost Estimation Tool -->
            <a href="/AIAnalysis/CostEstimation" class="group">
                <div class="bg-gradient-to-br from-blue-500 to-blue-600 rounded-xl p-6 text-white shadow-lg hover:shadow-xl transform hover:-translate-y-1 transition-all duration-300">
                    <div class="flex items-center justify-between mb-4">
                        <div class="w-14 h-14 bg-white bg-opacity-20 rounded-full flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
                            <i class="fas fa-calculator text-2xl"></i>
                        </div>
                        <i class="fas fa-arrow-right text-xl opacity-0 group-hover:opacity-100 transition-opacity duration-300"></i>
                    </div>
                    <h3 class="text-xl font-semibold mb-2">Cost Estimation</h3>
                    <p class="text-blue-100 text-sm">AI-powered cost breakdown from blueprints and project specs</p>
                    <div class="mt-4 pt-4 border-t border-white border-opacity-20">
                        <span class="text-xs font-medium">Blueprint Analysis • Material Estimation • Labor Costs</span>
                    </div>
                </div>
            </a>

            <!-- Predictive Maintenance Tool -->
            <a href="/AIAnalysis/PredictiveMaintenance" class="group">
                <div class="bg-gradient-to-br from-green-500 to-green-600 rounded-xl p-6 text-white shadow-lg hover:shadow-xl transform hover:-translate-y-1 transition-all duration-300">
                    <div class="flex items-center justify-between mb-4">
                        <div class="w-14 h-14 bg-white bg-opacity-20 rounded-full flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
                            <i class="fas fa-tools text-2xl"></i>
                        </div>
                        <i class="fas fa-arrow-right text-xl opacity-0 group-hover:opacity-100 transition-opacity duration-300"></i>
                    </div>
                    <h3 class="text-xl font-semibold mb-2">Predictive Maintenance</h3>
                    <p class="text-green-100 text-sm">Forecast future issues using historical maintenance data</p>
                    <div class="mt-4 pt-4 border-t border-white border-opacity-20">
                        <span class="text-xs font-medium">Pattern Recognition • Risk Scoring • Prevention Plans</span>
                    </div>
                </div>
            </a>

            <!-- Risk Analysis Tool -->
            <a href="/AIAnalysis/RiskAnalysis" class="group">
                <div class="bg-gradient-to-br from-red-500 to-red-600 rounded-xl p-6 text-white shadow-lg hover:shadow-xl transform hover:-translate-y-1 transition-all duration-300">
                    <div class="flex items-center justify-between mb-4">
                        <div class="w-14 h-14 bg-white bg-opacity-20 rounded-full flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
                            <i class="fas fa-exclamation-triangle text-2xl"></i>
                        </div>
                        <i class="fas fa-arrow-right text-xl opacity-0 group-hover:opacity-100 transition-opacity duration-300"></i>
                    </div>
                    <h3 class="text-xl font-semibold mb-2">Risk Analysis</h3>
                    <p class="text-red-100 text-sm">Identify project delays and mitigation strategies</p>
                    <div class="mt-4 pt-4 border-t border-white border-opacity-20">
                        <span class="text-xs font-medium">Schedule Analysis • Budget Risk • Recommendations</span>
                    </div>
                </div>
            </a>
        </div>

        <!-- Recent Analyses -->
        <div class="bg-white shadow rounded-lg">
            <div class="px-6 py-4 border-b border-gray-200">
                <h3 class="text-lg font-medium text-gray-900">
                    <i class="fas fa-history mr-2"></i>
                    Recent AI Analyses
                </h3>
            </div>

            @if (Model.Any())
            {
                <div class="overflow-x-auto">
                    <table class="min-w-full divide-y divide-gray-200">
                        <thead class="bg-gray-50">
                            <tr>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Type</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Title</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Project</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Confidence</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Created</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-gray-200">
                            @foreach (var analysis in Model)
                            {
                                <tr class="hover:bg-gray-50">
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        @{
                                            var typeInfo = analysis.AnalysisType switch
                                            {
                                                "CostEstimation" => ("bg-blue-100 text-blue-800", "calculator"),
                                                "PredictiveMaintenance" => ("bg-green-100 text-green-800", "tools"),
                                                "RiskAnalysis" => ("bg-red-100 text-red-800", "exclamation-triangle"),
                                                _ => ("bg-gray-100 text-gray-800", "brain")
                                            };
                                        }
                                        <span class="inline-flex items-center px-2 py-1 text-xs font-semibold rounded-full @typeInfo.Item1">
                                            <i class="fas fa-@typeInfo.Item2 mr-1"></i>
                                            @analysis.AnalysisType
                                        </span>
                                    </td>
                                    <td class="px-6 py-4">
                                        <div class="text-sm font-medium text-gray-900">@analysis.Title</div>
                                        <div class="text-sm text-gray-500">By @analysis.RequestedBy.FirstName @analysis.RequestedBy.LastName</div>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                        @if (analysis.Project != null)
                                        {
                                            <a href="/Project/Details/@analysis.ProjectId" class="text-brand-blue hover:text-blue-600">
                                                @analysis.Project.Name
                                            </a>
                                        }
                                        else
                                        {
                                            <span class="text-gray-400">-</span>
                                        }
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        @{
                                            var confidenceClass = analysis.ConfidenceLevel switch
                                            {
                                                "High" => "bg-green-100 text-green-800",
                                                "Low" => "bg-red-100 text-red-800",
                                                _ => "bg-yellow-100 text-yellow-800"
                                            };
                                        }
                                        <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full @confidenceClass">
                                            @analysis.ConfidenceLevel
                                        </span>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                        @analysis.CreatedAt.ToString("MMM dd, yyyy HH:mm")
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                                        <a href="/AIAnalysis/Details/@analysis.Id" class="text-brand-blue hover:text-blue-600">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="px-6 py-12 text-center">
                    <div class="mx-auto w-24 h-24 bg-gray-100 rounded-full flex items-center justify-center mb-4">
                        <i class="fas fa-brain text-gray-400 text-2xl"></i>
                    </div>
                    <h3 class="text-lg font-medium text-gray-900 mb-2">No AI Analyses Yet</h3>
                    <p class="text-gray-500 mb-6">Start using AI tools to generate intelligent insights for your projects.</p>
                    <div class="flex justify-center space-x-4">
                        <a href="/AIAnalysis/CostEstimation" class="inline-flex items-center px-4 py-2 bg-brand-blue text-white rounded-lg hover:bg-blue-600 transition-colors">
                            <i class="fas fa-calculator mr-2"></i>
                            Cost Estimation
                        </a>
                        <a href="/AIAnalysis/RiskAnalysis" class="inline-flex items-center px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 transition-colors">
                            <i class="fas fa-exclamation-triangle mr-2"></i>
                            Risk Analysis
                        </a>
                    </div>
                </div>
            }
        </div>

        <!-- AI Features Info -->
        <div class="mt-8 bg-gradient-to-r from-purple-50 to-blue-50 rounded-lg p-6 border border-purple-200">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">
                <i class="fas fa-info-circle text-brand-purple mr-2"></i>
                AI-Powered Features
            </h3>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div class="flex items-start">
                    <div class="flex-shrink-0">
                        <div class="w-8 h-8 bg-purple-100 rounded-full flex items-center justify-center">
                            <i class="fas fa-check text-purple-600"></i>
                        </div>
                    </div>
                    <div class="ml-3">
                        <h4 class="text-sm font-medium text-gray-900">Blueprint Analysis</h4>
                        <p class="text-sm text-gray-600">Extract quantities and estimates from construction drawings</p>
                    </div>
                </div>
                <div class="flex items-start">
                    <div class="flex-shrink-0">
                        <div class="w-8 h-8 bg-purple-100 rounded-full flex items-center justify-center">
                            <i class="fas fa-check text-purple-600"></i>
                        </div>
                    </div>
                    <div class="ml-3">
                        <h4 class="text-sm font-medium text-gray-900">Pattern Recognition</h4>
                        <p class="text-sm text-gray-600">Identify trends in maintenance history and project delays</p>
                    </div>
                </div>
                <div class="flex items-start">
                    <div class="flex-shrink-0">
                        <div class="w-8 h-8 bg-purple-100 rounded-full flex items-center justify-center">
                            <i class="fas fa-check text-purple-600"></i>
                        </div>
                    </div>
                    <div class="ml-3">
                        <h4 class="text-sm font-medium text-gray-900">Smart Recommendations</h4>
                        <p class="text-sm text-gray-600">Get actionable insights for cost savings and risk mitigation</p>
                    </div>
                </div>
                <div class="flex items-start">
                    <div class="flex-shrink-0">
                        <div class="w-8 h-8 bg-purple-100 rounded-full flex items-center justify-center">
                            <i class="fas fa-check text-purple-600"></i>
                        </div>
                    </div>
                    <div class="ml-3">
                        <h4 class="text-sm font-medium text-gray-900">South African Standards</h4>
                        <p class="text-sm text-gray-600">AI trained on local building codes and market rates</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>