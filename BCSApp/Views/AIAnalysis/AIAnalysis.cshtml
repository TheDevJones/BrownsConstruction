@{
    ViewData["Title"] = "AI Risk Analysis";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="min-h-screen bg-gray-50 py-6">
    <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Header -->
        <div class="mb-8">
            <div class="flex justify-between items-center">
                <div>
                    <h1 class="text-3xl font-bold text-gray-900">
                        <i class="fas fa-exclamation-triangle text-red-600 mr-3"></i>
                        AI Risk Analysis
                    </h1>
                    <p class="mt-2 text-gray-600">Identify project delays and generate mitigation strategies</p>
                </div>
                <a href="/AIAnalysis" class="inline-flex items-center px-4 py-2 bg-gray-600 text-white rounded-lg hover:bg-gray-700 transition-colors">
                    <i class="fas fa-arrow-left mr-2"></i>
                    Back to AI Dashboard
                </a>
            </div>
        </div>

        <!-- Success/Error Messages -->
        @if (TempData["Success"] != null)
        {
            <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-6">
                <i class="fas fa-check-circle mr-2"></i>@TempData["Success"]
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-6">
                <i class="fas fa-exclamation-triangle mr-2"></i>@TempData["Error"]
            </div>
        }

        <!-- Form -->
        <div class="bg-white shadow-lg rounded-lg overflow-hidden">
            <div class="bg-gradient-to-r from-red-500 to-red-600 px-6 py-4">
                <h3 class="text-lg font-semibold text-white">
                    <i class="fas fa-brain mr-2"></i>
                    AI-Powered Risk Detection
                </h3>
            </div>

            <form asp-action="GenerateRiskAnalysis" method="post" class="p-6" id="riskAnalysisForm">
                <div class="space-y-6">
                    <!-- Project Selection -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">
                            <i class="fas fa-project-diagram mr-2"></i>
                            Select Project for Analysis *
                        </label>
                        <select name="projectId" required class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-transparent">
                            <option value="">-- Select a Project --</option>
                            @if (ViewBag.Projects != null)
                            {
                                @foreach (var project in ViewBag.Projects)
                                {
                                    var statusIcon = project.Status switch
                                    {
                                        "Planning" => "🔵",
                                        "In Progress" => "🟡",
                                        "On Hold" => "🟠",
                                        _ => "⚪"
                                    };
                                    var daysRemaining = (project.EndDate - DateTime.Now).Days;
                                    <option value="@project.Id">
                                        @statusIcon @project.Name - @project.Location (@daysRemaining days remaining)
                                    </option>
                                }
                            }
                        </select>
                        <p class="text-xs text-gray-500 mt-1">AI will analyze schedule, budget, tasks, and maintenance data</p>
                    </div>

                    <!-- Risk Factors Preview -->
                    <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-4">
                        <h4 class="text-sm font-semibold text-yellow-900 mb-2">
                            <i class="fas fa-shield-alt mr-2"></i>
                            AI will analyze these risk factors:
                        </h4>
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-3 text-sm text-yellow-800">
                            <div><i class="fas fa-calendar text-yellow-600 mr-2"></i>Schedule delays and timeline risks</div>
                            <div><i class="fas fa-dollar-sign text-yellow-600 mr-2"></i>Budget overruns and cost variance</div>
                            <div><i class="fas fa-tasks text-yellow-600 mr-2"></i>Overdue tasks and dependencies</div>
                            <div><i class="fas fa-tools text-yellow-600 mr-2"></i>Pending maintenance issues</div>
                            <div><i class="fas fa-users text-yellow-600 mr-2"></i>Resource allocation problems</div>
                            <div><i class="fas fa-chart-line text-yellow-600 mr-2"></i>Progress vs. schedule variance</div>
                        </div>
                    </div>

                    <!-- What You'll Get -->
                    <div class="bg-red-50 border border-red-200 rounded-lg p-4">
                        <h4 class="text-sm font-semibold text-red-900 mb-2">
                            <i class="fas fa-clipboard-check mr-2"></i>
                            Comprehensive Risk Report includes:
                        </h4>
                        <ul class="text-sm text-red-800 space-y-1">
                            <li><i class="fas fa-check text-red-600 mr-2"></i>Overall risk score (0-100) with severity rating</li>
                            <li><i class="fas fa-check text-red-600 mr-2"></i>Top 5 identified risks with impact analysis</li>
                            <li><i class="fas fa-check text-red-600 mr-2"></i>Schedule risk assessment and critical path analysis</li>
                            <li><i class="fas fa-check text-red-600 mr-2"></i>Budget risk factors and financial projections</li>
                            <li><i class="fas fa-check text-red-600 mr-2"></i>Quality and safety considerations</li>
                            <li><i class="fas fa-check text-red-600 mr-2"></i>Specific mitigation strategies for each risk</li>
                            <li><i class="fas fa-check text-red-600 mr-2"></i>Prioritized action plan with timelines</li>
                            <li><i class="fas fa-check text-red-600 mr-2"></i>Rescheduling recommendations if needed</li>
                        </ul>
                    </div>

                    <!-- Warning for High Risk -->
                    <div class="bg-orange-50 border-l-4 border-orange-400 p-4">
                        <div class="flex">
                            <div class="flex-shrink-0">
                                <i class="fas fa-bell text-orange-400 text-xl"></i>
                            </div>
                            <div class="ml-3">
                                <p class="text-sm text-orange-700">
                                    <strong>Automatic Alerts:</strong> If the AI detects a high risk score (≥70%),
                                    the system will automatically notify the project manager and create an alert in the dashboard.
                                </p>
                            </div>
                        </div>
                    </div>

                    <!-- Submit Button -->
                    <div class="flex justify-end space-x-4">
                        <a href="/AIAnalysis" class="px-6 py-3 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition-colors">
                            Cancel
                        </a>
                        <button type="submit" id="analyzeBtn"
                                class="px-6 py-3 bg-gradient-to-r from-red-500 to-red-600 text-white rounded-lg hover:from-red-600 hover:to-red-700 transition-all duration-200 shadow-md hover:shadow-lg">
                            <i class="fas fa-brain mr-2"></i>
                            <span id="btnText">Analyze Project Risks</span>
                            <i class="fas fa-spinner fa-spin ml-2 hidden" id="loadingIcon"></i>
                        </button>
                    </div>
                </div>
            </form>
        </div>

        <!-- Risk Analysis Process -->
        <div class="mt-8 bg-white rounded-lg shadow-md p-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">
                <i class="fas fa-cogs text-red-600 mr-2"></i>
                How AI Risk Analysis Works
            </h3>
            <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
                <div class="text-center">
                    <div class="w-16 h-16 bg-red-100 rounded-full flex items-center justify-center mx-auto mb-3">
                        <i class="fas fa-database text-red-600 text-2xl"></i>
                    </div>
                    <h4 class="font-medium text-gray-900 mb-2">1. Data Collection</h4>
                    <p class="text-sm text-gray-600">Gather project metrics, tasks, budget, and schedule data</p>
                </div>
                <div class="text-center">
                    <div class="w-16 h-16 bg-purple-100 rounded-full flex items-center justify-center mx-auto mb-3">
                        <i class="fas fa-brain text-purple-600 text-2xl"></i>
                    </div>
                    <h4 class="font-medium text-gray-900 mb-2">2. AI Analysis</h4>
                    <p class="text-sm text-gray-600">DeepSeek AI identifies patterns, risks, and anomalies</p>
                </div>
                <div class="text-center">
                    <div class="w-16 h-16 bg-yellow-100 rounded-full flex items-center justify-center mx-auto mb-3">
                        <i class="fas fa-exclamation-triangle text-yellow-600 text-2xl"></i>
                    </div>
                    <h4 class="font-medium text-gray-900 mb-2">3. Risk Scoring</h4>
                    <p class="text-sm text-gray-600">Calculate risk scores and prioritize issues</p>
                </div>
                <div class="text-center">
                    <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-3">
                        <i class="fas fa-lightbulb text-green-600 text-2xl"></i>
                    </div>
                    <h4 class="font-medium text-gray-900 mb-2">4. Recommendations</h4>
                    <p class="text-sm text-gray-600">Generate actionable mitigation strategies</p>
                </div>
            </div>
        </div>

        <!-- Recent Projects at Risk -->
        @if (ViewBag.Projects != null)
        {
            var projectsList = (List<BCSApp.Models.Project>)ViewBag.Projects;
            var atRiskProjects = projectsList.Where(p =>
            (p.EndDate - DateTime.Now).Days < 30 ||
            p.ActualCost > p.Budget * 0.8m
            ).ToList();

            @if (atRiskProjects.Any())
            {
                <div class="mt-8 bg-white rounded-lg shadow-md p-6">
                    <h3 class="text-lg font-semibold text-gray-900 mb-4">
                        <i class="fas fa-flag text-orange-600 mr-2"></i>
                        Projects That May Need Analysis
                    </h3>
                    <div class="space-y-3">
                        @foreach (var project in atRiskProjects.Take(5))
                        {
                            var daysRemaining = (project.EndDate - DateTime.Now).Days;
                            var budgetUsed = project.Budget > 0 ? (project.ActualCost / project.Budget * 100) : 0;

                            <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg hover:bg-gray-100 transition-colors">
                                <div class="flex-1">
                                    <h4 class="font-medium text-gray-900">@project.Name</h4>
                                    <div class="flex items-center space-x-4 text-sm text-gray-600 mt-1">
                                        <span>
                                            <i class="fas fa-calendar mr-1"></i>
                                            @daysRemaining days remaining
                                        </span>
                                        <span>
                                            <i class="fas fa-chart-pie mr-1"></i>
                                            @budgetUsed.ToString("F1")% budget used
                                        </span>
                                    </div>
                                </div>
                                <button onclick="document.querySelector('select[name=projectId]').value='@project.Id'; document.getElementById('riskAnalysisForm').scrollIntoView({behavior: 'smooth'});"
                                        class="px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 text-sm">
                                    <i class="fas fa-search mr-1"></i>
                                    Analyze
                                </button>
                            </div>
                        }
                    </div>
                </div>
            }
        }
    </div>
</div>

<script>
    document.getElementById('riskAnalysisForm').addEventListener('submit', function(e) {
        const btn = document.getElementById('analyzeBtn');
        const btnText = document.getElementById('btnText');
        const loadingIcon = document.getElementById('loadingIcon');

        btn.disabled = true;
        btnText.textContent = 'Analyzing Risks with AI...';
        loadingIcon.classList.remove('hidden');
    });
</script>