@model List<BCSApp.Models.MaintenanceRequest>
@{
    ViewData["Title"] = "Maintenance Requests";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="min-h-screen bg-gray-50 py-6">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Header -->
        <div class="mb-8">
            <div class="flex justify-between items-center">
                <div>
                    <h1 class="text-3xl font-bold text-gray-900">Maintenance Requests</h1>
                    <p class="mt-2 text-gray-600">Manage and track all maintenance requests</p>
                </div>
                <div class="flex space-x-3">
                    <a href="/Maintenance/Create" class="inline-flex items-center px-4 py-2 bg-brand-blue text-white rounded-lg hover:bg-blue-600 transition-colors">
                        <i class="fas fa-plus mr-2"></i>
                        New Request
                    </a>
                    <a href="/Maintenance/AllRequests" class="inline-flex items-center px-4 py-2 bg-gray-600 text-white rounded-lg hover:bg-gray-700 transition-colors">
                        <i class="fas fa-list mr-2"></i>
                        All Requests
                    </a>
                </div>
            </div>
        </div>

        <!-- Statistics Cards -->
        <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
            <div class="bg-white rounded-lg shadow p-6">
                <div class="flex items-center">
                    <div class="flex-shrink-0">
                        <div class="w-8 h-8 bg-blue-100 rounded-full flex items-center justify-center">
                            <i class="fas fa-tools text-blue-600"></i>
                        </div>
                    </div>
                    <div class="ml-4">
                        <p class="text-sm font-medium text-gray-500">Total Requests</p>
                        <p class="text-2xl font-semibold text-gray-900">@Model.Count</p>
                    </div>
                </div>
            </div>
            
            <div class="bg-white rounded-lg shadow p-6">
                <div class="flex items-center">
                    <div class="flex-shrink-0">
                        <div class="w-8 h-8 bg-yellow-100 rounded-full flex items-center justify-center">
                            <i class="fas fa-clock text-yellow-600"></i>
                        </div>
                    </div>
                    <div class="ml-4">
                        <p class="text-sm font-medium text-gray-500">Pending</p>
                        <p class="text-2xl font-semibold text-gray-900">@Model.Count(m => m.Status == "Pending")</p>
                    </div>
                </div>
            </div>
            
            <div class="bg-white rounded-lg shadow p-6">
                <div class="flex items-center">
                    <div class="flex-shrink-0">
                        <div class="w-8 h-8 bg-green-100 rounded-full flex items-center justify-center">
                            <i class="fas fa-check-circle text-green-600"></i>
                        </div>
                    </div>
                    <div class="ml-4">
                        <p class="text-sm font-medium text-gray-500">Completed</p>
                        <p class="text-2xl font-semibold text-gray-900">@Model.Count(m => m.Status == "Completed")</p>
                    </div>
                </div>
            </div>
            
            <div class="bg-white rounded-lg shadow p-6">
                <div class="flex items-center">
                    <div class="flex-shrink-0">
                        <div class="w-8 h-8 bg-red-100 rounded-full flex items-center justify-center">
                            <i class="fas fa-exclamation-triangle text-red-600"></i>
                        </div>
                    </div>
                    <div class="ml-4">
                        <p class="text-sm font-medium text-gray-500">High Priority</p>
                        <p class="text-2xl font-semibold text-gray-900">@Model.Count(m => m.Priority == "High")</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Requests Table -->
        <div class="bg-white shadow rounded-lg">
            <div class="px-6 py-4 border-b border-gray-200">
                <h3 class="text-lg font-medium text-gray-900">Recent Requests</h3>
            </div>
            
            @if (Model.Any())
            {
                <div class="overflow-x-auto">
                    <table class="min-w-full divide-y divide-gray-200">
                        <thead class="bg-gray-50">
                            <tr>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">ID</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Title</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Client</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Priority</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Created</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-gray-200">
                            @foreach (var request in Model.Take(10))
                            {
                                <tr class="hover:bg-gray-50">
                                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                                        #@request.Id
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div class="text-sm font-medium text-gray-900">@request.Title</div>
                                        <div class="text-sm text-gray-500 truncate max-w-xs">@request.Description</div>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                        @(request.Client?.FirstName + " " + request.Client?.LastName)
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        @{
                                            var statusClass = request.Status switch
                                            {
                                                "Pending" => "bg-yellow-100 text-yellow-800",
                                                "In Progress" => "bg-blue-100 text-blue-800",
                                                "Completed" => "bg-green-100 text-green-800",
                                                "Cancelled" => "bg-red-100 text-red-800",
                                                _ => "bg-gray-100 text-gray-800"
                                            };
                                        }
                                        <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full @statusClass">
                                            @request.Status
                                        </span>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        @{
                                            var priorityClass = request.Priority switch
                                            {
                                                "High" => "bg-red-100 text-red-800",
                                                "Medium" => "bg-yellow-100 text-yellow-800",
                                                "Low" => "bg-green-100 text-green-800",
                                                _ => "bg-gray-100 text-gray-800"
                                            };
                                        }
                                        <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full @priorityClass">
                                            @request.Priority
                                        </span>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                        @request.CreatedAt.ToString("MMM dd, yyyy")
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                                        <div class="flex space-x-2">
                                            <a href="/Maintenance/Details/@request.Id" class="text-brand-blue hover:text-blue-600">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a href="/Maintenance/Edit/@request.Id" class="text-gray-600 hover:text-gray-900">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                
                @if (Model.Count > 10)
                {
                    <div class="px-6 py-4 border-t border-gray-200">
                        <a href="/Maintenance/AllRequests" class="text-brand-blue hover:text-blue-600 text-sm font-medium">
                            View all @Model.Count requests â†’
                        </a>
                    </div>
                }
            }
            else
            {
                <div class="px-6 py-12 text-center">
                    <div class="mx-auto w-24 h-24 bg-gray-100 rounded-full flex items-center justify-center mb-4">
                        <i class="fas fa-tools text-gray-400 text-2xl"></i>
                    </div>
                    <h3 class="text-lg font-medium text-gray-900 mb-2">No maintenance requests</h3>
                    <p class="text-gray-500 mb-6">Get started by creating your first maintenance request.</p>
                    <a href="/Maintenance/Create" class="inline-flex items-center px-4 py-2 bg-brand-blue text-white rounded-lg hover:bg-blue-600 transition-colors">
                        <i class="fas fa-plus mr-2"></i>
                        Create Request
                    </a>
                </div>
            }
        </div>
    </div>
</div>
